<Window x:Class="Marafon.Sponsor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Marafon"
        mc:Ignorable="d"
        Title="" Height="250"
        Width="400" 
        WindowStyle="ToolWindow"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label
                Content="Наименование спонсора"
                FontSize="20"
                HorizontalAlignment="Center"/>
            
            <Image
                Height="80"
                Width="80"
                Source="Images/Logo.png"/>

            <TextBlock 
                TextWrapping="Wrap"
                Text="Здесь указывается описание благотворительной организации.
                Должна быть обеспечена возможность просмотра
                большого количества информации в данном окне"
                Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
